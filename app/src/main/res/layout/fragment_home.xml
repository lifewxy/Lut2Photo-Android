<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件夹监控"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_marginBottom="24dp" />

        <!-- 1. 监控控制 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="监控控制"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_monitoring_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="监控状态: 未启动"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_marginBottom="12dp" />
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_start_monitoring"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="开始监控"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_stop_monitoring"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="停止监控"
                        android:textSize="16sp"
                        android:enabled="false"
                        style="@style/Widget.Material3.Button.ElevatedButton" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. 文件设置（可折叠） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layout_file_settings_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="文件设置"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_toggle_file_settings"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="▼"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_file_settings_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- LUT文件选择 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LUT文件"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinner_lut"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp" />

                    <!-- 输入文件夹 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="输入文件夹"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_input_folder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="未设置文件夹"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_select_input_folder"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:text="选择输入文件夹"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button.ElevatedButton" />

                    </LinearLayout>

                    <!-- 输出文件夹 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="输出文件夹"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/text_output_folder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="未设置文件夹"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_select_output_folder"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:text="选择输出文件夹"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button.ElevatedButton" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. 参数设置（可折叠） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.CardView.Outlined"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layout_params_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="参数设置"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_toggle_params"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="▼"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_params_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- 强度滑块 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="效果强度"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_strength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:stepSize="1"
                        android:value="60"
                        android:layout_marginBottom="16dp" />

                    <!-- 质量滑块 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="输出质量"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/slider_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="1"
                        android:valueTo="100"
                        android:stepSize="1"
                        android:value="90"
                        android:layout_marginBottom="16dp" />

                    <!-- 抖动选项 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="抖动类型"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_dither"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_floyd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Floyd-Steinberg"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_random"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="随机抖动"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无"
                            android:checked="true" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</ScrollView>
